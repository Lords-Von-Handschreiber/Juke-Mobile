<Window x:Class="Juke_Mobile_Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Juke-Mobile"
        ResizeMode="CanResizeWithGrip" 
        MinWidth="500" MinHeight="400">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <StatusBar>
                <TextBlock Text="Server Status:"/>
                <TextBlock Text="Off"/>
                <Separator/>
                <TextBlock Text="Tracks in the queue: "/>
                <TextBlock Text="0"/>
            </StatusBar>
        </StackPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="MenuItem_Click_1"/>
            </MenuItem>
            <MenuItem Header="_Server">
                <MenuItem Header="_Start"/>
                <MenuItem Header="Sto_p"/>
            </MenuItem>
            <MenuItem Header="_Player">
                <MenuItem Header="_Play" Command="Play"/>
                <MenuItem Header="Pau_se" Command="Pause"/>
                <MenuItem Header="_Stop" Command="Stop"/>
            </MenuItem>
            <MenuItem Header="_Help" />
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Name:"/>
            <ListBox Grid.Column="1">
                <ListBoxItem Content="Sonnentanz - Klangkarussel"/>
            </ListBox>
            <Label Grid.Column="2" Content="Name:"/>
        </Grid>
    </DockPanel>
</Window>
